<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="member">
	<!-- member Login Process -->
	<select id="loginmember" resultType="int" parameterType="member">
		SELECT count(*) 
		FROM member 
		WHERE email = #{email} and password = #{password}
	</select>
	
	<!-- Select all members -->
	<select id="allmember" resultType="member">
		SELECT * 
		FROM member
	</select>
	
	<!-- Select one member -->
	<select id="onemember" resultType="member" parameterType="member">
		SELECT * 
		FROM member 
		WHERE memberno = #{memberno}
	</select>
	
	<!-- Insert member record -->
	<insert id="insertmember" parameterType="member">
		INSERT INTO member 
		VALUES(member_seq.nextval, #{name}, #{email}, #{password}, #{phone}, #{age}, #{sex}, #{staff}, sysdate)
	</insert>
	
	<!-- Update member record -->
	<update id="updatemember" parameterType="member">
		UPDATE member 
		SET name = #{name}, email = #{email}, password = #{password}, phone = #{phone}, age = #{age}, sex = #{sex} 
		WHERE memberno = #{memberno}
	</update>
	
	<!-- Delete member record -->
	<delete id="deletemember" parameterType="member">
		DELETE FROM member 
		WHERE memberno = #{memberno}
	</delete>
</mapper>
